<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChangeColorView">
        <attr name="changeIcon" format="reference"/>
        <attr name="changeColor" format="color"/>
        <attr name="defaultColor" format="color"/>
        <attr name="changeText" format="string"/>
        <attr name="changeTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="HorizontalIndicatorView">
        <attr name="equally_item" format="boolean"/>
        <attr name="hiv_changeColor" format="color"/>
        <attr name="hiv_defaultColor" format="color"/>
    </declare-styleable>

    <attr name="app_main_color" format="color"/>

    <declare-styleable name="RoundImageView">
        <attr name="border_thickness" format="dimension"/>
        <attr name="border_inside_color" format="color"/>
        <attr name="border_outside_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

</resources>